{
  "name": "musicvista-server",
  "version": "1.0.0",
  "description": "MusicVista Backend API Server",
  "main": "dist/server.js",
  "scripts": {
    "dev": "cross-env NODE_ENV=development ts-node-dev --respawn --transpile-only src/server.ts",
    "build": "tsc",
    "build:prod": "cross-env NODE_ENV=production npm run clean && npm run build",
    "start": "node dist/server.js",
    "start:prod": "cross-env NODE_ENV=production node -r dotenv/config dist/server.js dotenv_config_path=.env.production",
    "clean": "rimraf dist",
    "docker:build": "docker build -t musicvista-server .",
    "docker:run": "docker run -p 3001:3001 --env-file .env.production musicvista-server",
    "docker:compose": "docker-compose up -d",
    "docker:compose:dev": "docker-compose -f docker-compose.dev.yml up",
    "docker:stop": "docker-compose down",
    "docker:logs": "docker-compose logs -f server",
    "deploy:build": "npm run build:prod",
    "deploy:start": "npm run start:prod",
    "deploy:check": "node -e \"console.log('Environment:', process.env.NODE_ENV || 'development'); console.log('Port:', process.env.PORT || 3001);\"",
    "test": "cross-env NODE_ENV=test jest",
    "test:watch": "cross-env NODE_ENV=test jest --watch",
    "test:coverage": "cross-env NODE_ENV=test jest --coverage",
    "test:unit": "cross-env NODE_ENV=test jest --testPathPattern=unit",
    "test:integration": "cross-env NODE_ENV=test jest --testPathPattern=integration",
    "test:types": "tsc --noEmit --project tsconfig.test.json",
    "test:types:src": "tsc --noEmit --project tsconfig.json",
    "test:ci": "cross-env NODE_ENV=test jest --coverage --ci --watchAll=false",
    "test:verbose": "cross-env NODE_ENV=test jest --verbose",
    "test:debug": "cross-env NODE_ENV=test node --inspect-brk node_modules/.bin/jest --runInBand"
  },
  "keywords": [
    "music",
    "api",
    "express",
    "typescript",
    "jwt"
  ],
  "author": "MusicVista Team",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "pg": "^8.16.3"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.10.0",
    "@types/pg": "^8.10.9",
    "@types/supertest": "^2.0.16",
    "cross-env": "^10.1.0",
    "jest": "^29.7.0",
    "rimraf": "^5.0.5",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.2"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
